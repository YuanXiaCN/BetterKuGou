{
  "name": "betterkugou",
  "private": true,
  "version": "0.1.1-alpha-pre1",
  "description": "一个更好的酷狗音乐桌面客户端",
  "author": "鸢夏 <1925019494@qq.com>",
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "electron .",
    "electron:build": "npm run build && npm run copy-backend && electron-builder",
    "copy-backend": "node scripts/copy-backend.js",
    "copy-backend-simple": "node scripts/copy-backend-simple.js",
    "create-portable-backend": "node scripts/create-portable-backend.js",
    "setup-self-contained": "node scripts/setup-self-contained.js",
    "install-backend-deps": "cd backend && npm install --production",
    "dist": "npm run electron:build",
  "dist:win": "npm run build && npm run setup-self-contained && electron-builder --win --x64 --ia32 --arm64",
  "dist:linux": "npm run build && npm run setup-self-contained && electron-builder --linux",
  "dist:mac": "npm run build && npm run setup-self-contained && electron-builder --mac",
  "dist:all": "npm run dist:win && npm run dist:linux && npm run dist:mac",
  "dist:portable": "npm run build && npm run setup-self-contained && electron-builder --win portable",
  "build:win": "npm run build && npm run setup-self-contained && electron-builder --win",
  "build:self-contained": "npm run build && npm run setup-self-contained && electron-builder --win"
  },
  "build": {
    "appId": "com.betterkugou.app",
    "productName": "BetterKugou",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "!backend"
    ],
    "extraResources": [
      {
        "from": "backend",
        "to": "backend",
        "filter": ["**/*"]
      },
      {
        "from": "resources/nodejs",
        "to": "nodejs",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32", "arm64"]
        },
        {
          "target": "portable",
          "arch": ["x64", "ia32", "arm64"]
        }
      ],
      "icon": "public/logo.ico",
      "publisherName": "鸢夏",
      "verifyUpdateCodeSignature": false
    },
    "linux": {
      "target": ["AppImage", "deb", "rpm"],
      "icon": "public/logo.png",
      "category": "AudioVideo",
      "maintainer": "鸢夏 <1925019494@qq.com>"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "public/logo.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "deleteAppDataOnUninstall": false,
      "installerIcon": "public/logo.ico",
      "uninstallerIcon": "public/logo.ico",
      "installerHeaderIcon": "public/logo.ico",
      "license": "LICENSE",
      "artifactName": "${productName}-v${version}-Setup.${ext}"
    },
    "portable": {
      "artifactName": "${productName}-v${version}-Portable.${ext}"
    }
  },
  "dependencies": {
    "axios": "^1.7.9",
    "vue": "^3.5.12"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.1.4",
    "@vue/compiler-sfc": "^3.5.12",
    "adm-zip": "^0.5.10",
    "electron": "^32.1.2",
    "electron-builder": "^25.1.8",
    "fs-extra": "^11.2.0",
    "vite": "^6.0.11",
    "vite-plugin-electron": "^0.28.7",
    "vite-plugin-electron-renderer": "^0.14.5"
  }
}
